<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card shadow-sm">
      <div class="card-header bg-primary text-white">
        <h3 class="mb-0">New Todo</h3>
      </div>
      <div class="card-body">
        <%= form_with model:@todo,data: {turbo:false} do |f| %>
          <div class="mb-3">
            <%= f.label :title, class:"form-label" %>
            <%= f.text_field :title, class:"form-control", placeholder:"Enter todo title" %>
          </div>

          <div class="mb-3 form-check">
            <%= f.check_box :completed, class:"form-check-input" %>
            <%= f.label :completed, class:"form-check-label" %>
          </div>

          <div class="d-flex gap-2">
            <%= f.submit "Create Todo", class:"btn btn-primary" %>
            <%= link_to "Cancel", todos_path, class:"btn btn-outline-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>