<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="display-4">My Todos</h1>

</div>

<% if @todos.any? %>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% @todos.each do |todo| %>
      <div class="col">
        <div class="card h-100 shadow-sm <%= todo.completed ? 'border-success' : 'border-warning' %>">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-2">
              <h5 class="card-title <%= 'text-decoration-line-through text-muted' if todo.completed %>">
                <%= todo.title %>
              </h5>
              <span class="badge <%= todo.completed ? 'bg-success' : 'bg-warning text-dark' %>">
                <%= todo.completed ? "✓ Completed" : "⏳ Pending" %>
              </span>
            </div>
          </div>
          <div class="card-footer bg-transparent d-flex gap-2 justify-content-end">
            <%= link_to "Edit", edit_todo_path(todo), class:"btn btn-sm btn-outline-primary" %>
            <%= button_to "Delete", todo_path(todo),
              method: :delete,
              data: { confirm: "Are you sure?" },
              class:"btn btn-sm btn-outline-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="alert alert-info text-center" role="alert">
    <h4 class="alert-heading">No todos yet!</h4>
    <p>Get started by creating your first todo.</p>
    <%= link_to "Create Todo", new_todo_path, class:"btn btn-primary" %>
  </div>
<% end %>



